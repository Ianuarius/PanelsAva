<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:views="clr-namespace:PanelsAva.Views"
			 x:Class="PanelsAva.Views.DockablePanel">
	<Border Background="#2A2A2A" BorderBrush="#3A3A3A" BorderThickness="1">
		<Grid RowDefinitions="28,*">
			<Border x:Name="TitleBar"		Background="#3A3A3A"		Grid.Row="0"		HorizontalAlignment="Stretch">
				<TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=views:DockablePanel}}"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Foreground="#FFFFFF" />
			</Border>
			<Border Grid.Row="1"		Background="#222222">
				<TextBlock Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=views:DockablePanel}}"
						VerticalAlignment="Center"
						HorizontalAlignment="Center"
						Foreground="#B0B0B0" />
			</Border>
		</Grid>
	</Border>
</UserControl>
