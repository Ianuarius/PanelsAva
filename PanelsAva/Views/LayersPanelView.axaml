<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="300"
             x:Class="PanelsAva.Views.LayersPanelView">
  <StackPanel Spacing="6" Margin="8">
    <TextBlock Text="Layers" FontSize="16" />
    <ListBox>
      <ListBoxItem Content="Layer 1" />
      <ListBoxItem Content="Layer 2" />
      <ListBoxItem Content="Layer 3" />
    </ListBox>
    <StackPanel Orientation="Horizontal" Spacing="6">
      <Button Content="Add" Width="60" />
      <Button Content="Delete" Width="60" />
    </StackPanel>
  </StackPanel>
</UserControl>