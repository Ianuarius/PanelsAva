<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="clr-namespace:PanelsAva.Views"
		mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720" Width="1280" Height="720"
		x:Class="PanelsAva.Views.MainWindow"
		Icon="/Assets/avalonia-logo.ico"
		Title="PanelsAva">
	<Grid RowDefinitions="Auto,*">
		<Border Grid.Row="0" Height="0" />
		<Grid Grid.Row="1">
			<Grid ColumnDefinitions="260,*">
				<Panel Grid.Column="0" ZIndex="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
					<views:DockHost x:Name="LeftDockHost"
							HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
						<views:DockablePanel x:Name="ToolPanel"
								Title="Panel"
								Placeholder="Placeholder content"
								DockHost="{Binding ElementName=LeftDockHost}"
								FloatingLayer="{Binding ElementName=FloatingLayer}"
								MaxHeight="300" />
					</views:DockHost>
				</Panel>
				<Border Grid.Column="1" Background="#1C1C1C" />
			</Grid>
			<Canvas x:Name="FloatingLayer" Panel.ZIndex="10" />
		</Grid>
	</Grid>
</Window>