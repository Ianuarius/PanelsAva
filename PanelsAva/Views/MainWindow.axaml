<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="clr-namespace:PanelsAva.Views"
		mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720" Width="1280" Height="720"
		x:Class="PanelsAva.Views.MainWindow"
		Icon="/Assets/avalonia-logo.ico"
		Title="PanelsAva">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="Window">
				<MenuItem x:Name="LayersMenuItem" Header="Layers" Click="OnToggleLayers" />
				<MenuItem x:Name="PropertiesMenuItem" Header="Properties" Click="OnToggleProperties" />
				<MenuItem x:Name="ColorMenuItem" Header="Color" Click="OnToggleColor" />
				<MenuItem x:Name="BrushesMenuItem" Header="Brushes" Click="OnToggleBrushes" />
				<MenuItem x:Name="HistoryMenuItem" Header="History" Click="OnToggleHistory" />
				<MenuItem x:Name="TimelineMenuItem" Header="Timeline" Click="OnToggleTimeline" />
				<Separator />
				<MenuItem x:Name="SaveWorkspaceMenuItem" Header="Save Workspace" Click="OnSaveWorkspace" />
				<MenuItem x:Name="LoadWorkspaceMenuItem" Header="Load Workspace" />
				<MenuItem x:Name="DefaultWorkspaceMenuItem" Header="Default Workspace" Click="OnLoadDefaultWorkspace" />
				<Separator />
				<MenuItem x:Name="LockWorkspaceMenuItem" Header="Lock Workspace" Click="OnToggleLockWorkspace" />
			</MenuItem>
		</Menu>
		<Grid>
			<views:MainView x:Name="MainView" />
			<Canvas x:Name="FloatingLayer" Panel.ZIndex="10" />
		</Grid>
	</DockPanel>
</Window>