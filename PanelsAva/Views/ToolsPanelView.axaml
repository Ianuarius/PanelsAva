<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="300"
             x:Class="PanelsAva.Views.ToolsPanelView">
  <StackPanel Spacing="6" Margin="8">
    <TextBlock Text="Tools" FontSize="16" />
    <WrapPanel>
      <Button Content="Move" Width="70" Margin="3" />
      <Button Content="Brush" Width="70" Margin="3" />
      <Button Content="Eraser" Width="70" Margin="3" />
      <Button Content="Lasso" Width="70" Margin="3" />
      <Button Content="Fill" Width="70" Margin="3" />
      <Button Content="Text" Width="70" Margin="3" />
    </WrapPanel>
  </StackPanel>
</UserControl>