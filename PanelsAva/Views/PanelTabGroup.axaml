<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:views="clr-namespace:PanelsAva.Views"
			 x:Class="PanelsAva.Views.PanelTabGroup"
			 MinHeight="50" Design.Width="200" Design.Height="150">
	<Border Background="#2A2A2A" BorderBrush="#3A3A3A" BorderThickness="1">
		<Grid RowDefinitions="18,*">
			<StackPanel x:Name="TabStrip" Grid.Row="0" Orientation="Horizontal" Background="#2A2A2A" ZIndex="1" />
			<Border Grid.Row="1" Background="#222222">
				<ContentPresenter Content="{Binding Content, RelativeSource={RelativeSource AncestorType=views:PanelTabGroup}}" />
			</Border>
		</Grid>
	</Border>
</UserControl>
